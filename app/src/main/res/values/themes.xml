<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Suitmedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/btn_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Customize your theme here. -->


        <item name="android:fontFamily">@string/font_family_poppins</item>
        <item name="fontFamily">@string/font_family_poppins</item>
    </style>
    <style name="Theme.Suitmedia.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextCover">

        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#04021D</item>
    </style>
    <style name="TextCover2">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#04021D</item>
    </style>

    <style name="EmailScreenThird">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#686777</item>
    </style>

</resources>